$(document).ready(function(){

$('ul.$block_title$__tabs').on('click', 'li:not(.$block_title$__tab_active)', function() {
    $(this)
    .addClass('$block_title$__tab_active').siblings().removeClass('$block_title$__tab_active')
    .closest('div.wrapper').find('div.$block_title$__content').removeClass('$block_title$__content_active').eq($(this).index()).addClass('$block_title$__content_active');
});

function toggleSlide(item) {
    $(item).each(function(i) {
        $(this).on('click', function(e) {
            e.preventDefault();
            $('.$block_title$-item__content').eq(i).toggleClass('$block_title$-item__content_active');
            $('.$block_title$-item__list').eq(i).toggleClass('$block_title$-item__list_active');
        })
    });
};

    toggleSlide('.$block_title$-item__link');
    toggleSlide('.$block_title$-item__back');
});

















